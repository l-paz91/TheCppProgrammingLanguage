/*
	Chapter 2 - Exercise 5
	(*1) Write out a bool, a char, an int, a double, and a string.

*/
// https://github.com/l-paz91/
// -----------------------------------------------------------------------------

//--INCLUDES--//
#include "std_lib_facilities.h"

// -----------------------------------------------------------------------------

int main()
{
	bool b = true;
	char c = 'a';
	int i = 123;
	double d = 3.14;
	string s = "Hello, World!";

	cout << "bool: " << b << endl;
	cout << "char: " << c << endl;
	cout << "int: " << i << endl;
	cout << "double: " << d << endl;
	cout << "string: " << s << endl;

	keep_window_open();

	return 0;
}

